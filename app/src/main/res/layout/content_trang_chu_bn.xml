<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical"
    android:layout_marginTop="70dp"
    android:layout_marginRight="10dp"
    android:layout_marginLeft="10dp"
    tools:showIn="@layout/app_bar_trang_chu_bn"
    tools:context="alobacsi.alobacsi.TrangChuBNActivity"
    >
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Chat Trực Tiếp Với Bác Sĩ"
        android:textSize="16dp"
        android:textStyle="bold" />
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"/>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        app:columnCount="7"
        app:rowCount="1">
        <ImageView
            android:id="@+id/btnBS1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/icon_bs1"
            />
        <ImageView
            android:id="@+id/btnBS2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/icon_bs1"
            />
        <ImageView
            android:id="@+id/btnBS3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/icon_bs1"
            />
        <ImageView
            android:id="@+id/btnBS4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/icon_bs1"
            />
        <ImageView
            android:id="@+id/btnBS5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            android:src="@drawable/icon_bs1"
            />
        <TextView
            android:id="@+id/btnXemThem"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="2"
            app:layout_rowWeight="1"
            android:gravity="bottom"
            android:layout_marginBottom="10dp"
            android:text="Xem Thêm..."
            android:textStyle="bold"
            />


    </android.support.v7.widget.GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"/>
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="30dp"
        app:columnCount="2"
        app:rowCount="6">


        <ImageView
            android:id="@+id/btnHoiDap"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2"
            app:layout_column="0"
            app:layout_row="0"
            android:src="@drawable/icon_hoi_dap"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="2"
            android:text="Hỏi Đáp"
            android:textStyle="bold"
            android:gravity="center"
            />


        <ImageView
            android:id="@+id/btnLichHen"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2"
            app:layout_column="1"
            app:layout_row="0"
            android:src="@drawable/icon_lich_hen"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="2"
            android:text="Lịch Hẹn"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/btnHopThu"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2"
            app:layout_column="0"
            app:layout_row="3"
            android:src="@drawable/icon_hop_thu"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="5"
            android:text="Hộp Thư"
            android:textStyle="bold"
            android:gravity="center"
            />
        <ImageView
            android:id="@+id/btnGoiDien"
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="2"
            app:layout_column="1"
            app:layout_row="3"
            android:src="@drawable/icon_goi_dien"
            />
        <TextView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="5"
            android:text="Gọi Điện"
            android:textStyle="bold"
            android:gravity="center"
            />

    </android.support.v7.widget.GridLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/holo_blue_dark"/>



</LinearLayout>
