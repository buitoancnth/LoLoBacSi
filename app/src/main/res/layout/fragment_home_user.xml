<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    android:orientation="vertical">
    <ImageView
        android:layout_width="match_parent"
        android:layout_height="@dimen/image_size"
        android:src="@drawable/bg_header"
        />
    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="240dp"
        app:columnCount="2"
        app:rowCount="2">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="0"
            android:layout_margin="5dp"
            android:background="@drawable/bg_icon_home"
            android:padding="12dp"
            >
            <ImageView
                android:id="@+id/btnHoiDap"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:layout_weight="1"
                android:src="@drawable/ic_message"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hộp Thư"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"

                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="0"
            android:layout_margin="5dp"
            android:background="@drawable/bg_icon_home"
            android:padding="12dp"
            >
            <ImageView
                android:id="@+id/btnLichHen"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/ic_call"
                android:layout_weight="1"
                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Gọi Điện"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="0"
            app:layout_row="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_icon_home"
            android:padding="12dp"
            >

            <ImageView
                android:id="@+id/btnHopThu"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:src="@drawable/ic_lich_hen"

                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lịch Hẹn"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:orientation="vertical"
            app:layout_columnWeight="1"
            app:layout_rowWeight="1"
            app:layout_column="1"
            app:layout_row="1"
            android:layout_margin="5dp"
            android:background="@drawable/bg_icon_home"
            android:padding="12dp"
            >
            <ImageView
                android:id="@+id/btnGoiDien"
                android:layout_height="0dp"
                android:layout_width="match_parent"
                android:src="@drawable/ic_hoi_dap"
                android:layout_weight="1"

                />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hỏi Đáp"
                android:fontFamily="sans-serif"
                android:textSize="20dp"
                android:gravity="center"
                android:textColor="@android:color/black"/>
        </LinearLayout>
    </android.support.v7.widget.GridLayout>

</LinearLayout>
